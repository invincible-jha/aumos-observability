# ============================================================================
# .env.example — AumOS Observability Stack
# Copy to .env and fill in values for local development
# NEVER commit .env to version control
# ============================================================================

# ─────────────────────────────────────────────
# Standard AumOS settings (AUMOS_ prefix)
# ─────────────────────────────────────────────
AUMOS_ENVIRONMENT=development
AUMOS_SERVICE_NAME=aumos-observability
AUMOS_LOG_LEVEL=INFO

# PostgreSQL
AUMOS_DATABASE__URL=postgresql+asyncpg://aumos:aumos_dev@localhost:5432/aumos

# Kafka
AUMOS_KAFKA__BROKERS=localhost:9092
AUMOS_KAFKA__CONSUMER_GROUP_ID=aumos-observability

# JWT Auth (shared secret with aumos-auth-gateway)
AUMOS_JWT__SECRET_KEY=dev-secret-change-in-production
AUMOS_JWT__ALGORITHM=HS256

# ─────────────────────────────────────────────
# OpenTelemetry Collector
# ─────────────────────────────────────────────
# Used by ALL AumOS services to send their own traces
AUMOS_OTEL_ENDPOINT=localhost:4317

# ─────────────────────────────────────────────
# Observability service-specific settings (AUMOS_OBSERVABILITY_ prefix)
# ─────────────────────────────────────────────

# Prometheus
AUMOS_OBSERVABILITY_PROMETHEUS_URL=http://localhost:9090
AUMOS_OBSERVABILITY_PROMETHEUS_TIMEOUT_SECONDS=30.0

# Grafana
AUMOS_OBSERVABILITY_GRAFANA_URL=http://localhost:3000
AUMOS_OBSERVABILITY_GRAFANA_API_KEY=your-grafana-service-account-token-here
AUMOS_OBSERVABILITY_GRAFANA_ORG_ID=1

# Langfuse LLM Tracing
AUMOS_OBSERVABILITY_LANGFUSE_URL=http://localhost:3001
AUMOS_OBSERVABILITY_LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here
AUMOS_OBSERVABILITY_LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here

# Loki Log Aggregation
AUMOS_OBSERVABILITY_LOKI_URL=http://localhost:3100

# Jaeger Distributed Tracing
AUMOS_OBSERVABILITY_JAEGER_URL=http://localhost:16686

# Alertmanager
AUMOS_OBSERVABILITY_ALERTMANAGER_URL=http://localhost:9093

# OTEL Collector endpoints (for the collector itself)
AUMOS_OBSERVABILITY_OTEL_COLLECTOR_GRPC_ENDPOINT=localhost:4317
AUMOS_OBSERVABILITY_OTEL_COLLECTOR_HTTP_ENDPOINT=http://localhost:4318

# SLO Engine
AUMOS_OBSERVABILITY_SLO_EVALUATION_INTERVAL_SECONDS=60
AUMOS_OBSERVABILITY_SLO_FAST_BURN_WINDOW_MINUTES=5
AUMOS_OBSERVABILITY_SLO_SLOW_BURN_WINDOW_MINUTES=60
